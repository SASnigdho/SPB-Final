<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".fragments.HomeFM">

    <Button
        android:id="@+id/addPrescription_btn_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Prescription"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/inventory_btn_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/lowMedicineList_btn_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Low Medicine"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/viewAll_btn_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View All"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>