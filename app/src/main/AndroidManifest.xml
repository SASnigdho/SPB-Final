<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ittouchbd.com.smartpillbox">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".extension.OffLineFirebaseEnable"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_level"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activitys.UpdateAccountInfoActivity"></activity>
        <activity android:name=".activitys.AccountInfoActivity" />
        <activity android:name=".activitys.ChangePassword" />
        <activity
            android:name=".activitys.AlarmActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".activitys.SignUpActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.LogInActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>

        <receiver android:name=".helper.AlarmHelper" />
    </application>

</manifest>